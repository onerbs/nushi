:root
  --font-body sans-serif
  --font-head serif
  --font-mono monospace

  font-family var(--font-body)
  font-size 15pt
  font-synthesis none
  font-weight 300
  line-height 1.25

  text-rendering optimizeLegibility
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  -webkit-text-size-adjust 100%

  @media (min-width 768px)
    font-size 16pt
    line-height 1.5

h1,
h2,
h3,
h4,
h5,
h6
  font-family var(--font-head)
  line-height 1

h1,
h2,
h3
  font-weight 900
  margin 0.5em 0

h4,
h5,
h6
  font-weight 500
  margin 0.25em 0

h1
  font-size 2.5rem

h2
  font-size 2rem

h3
  font-size 1.6rem

h4
  font-size 1.25rem

h5
  font-size 1rem

h6
  font-size .875rem

code,
kbd,
pre
  font-family var(--font-mono)
  font-size 0.85em

code,
pre
  background-color var(--color-back-line)
  padding 1rem 1.4rem
  border none

pre
  position relative
  white-space pre-wrap

pre > .copy
  cursor pointer
  border-radius 100pt
  opacity 0.6
  padding 0.5em 1em
  transition all 500ms ease

  position absolute
  top 0
  right 0

  &:hover
    color var(--color-link-fore)
    background-color var(--color-link-light)
    opacity 1

kbd
  color var(--color-back)
  background-color var(--color-fore)
  box-shadow 0 3pt #0005
  font-weight 500
  padding 1pt 0.5pt
