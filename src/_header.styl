header
  display grid
  grid-template-rows 1fr
  grid-gap var(--gap-small)
  border-bottom 1px solid var(--color-back-line)
  padding 1.5rem

  & > *
    font-family var(--font-body)
    text-align center

  & > h1
    font-size 1.2rem
    font-weight 900
    margin 0

  & > h2
    font-size 1.75rem
    font-weight 500
    letter-spacing 1.5px
    margin 0

  & > h1,
  & > small
    opacity 0.75

  @media (min-width 768px)
    grid-template-columns 1fr auto 1fr
    align-items center
    
    & > h1
      font-size 1.2rem
      text-align left

    & > h2
      font-size 2rem

    & > small
      text-align right
