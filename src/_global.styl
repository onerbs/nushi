@require '_color'

*,
:after,
:before
  box-sizing border-box

:root
  color-scheme dark light
  font-family 'Inter', system-ui, sans-serif
  font-size 15pt
  font-synthesis none
  font-weight 300
  line-height 1.33
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-text-size-adjust 100%

  @supports (font-variation-settings normal)
    font-family 'Inter var', system-ui, sans-serif

html
  scroll-behavior smooth

  @media (min-width 768px)
    font-size 16pt
    line-height 1.25

body
  margin 0
  min-height 100vh

mark
  meta-back()

::selection
  inverted()

:focus
  outline-offset 2pt
  outline 2pt solid var(--color-meta)
  -moz-outline-radius calc(2pt + var(--radii))

[disabled]
  cursor default
  opacity 0.6
  pointer-events none
  user-select none
