nav
  display flex
  align-items center
  justify-content center
  flex-wrap wrap
  grid-gap 2rem
  padding 0

  ol,
  ul
    display flex
    flex-wrap wrap
    align-items center
    justify-content center
    grid-gap 1.5rem
    margin 0
    padding 1.5rem 2rem

    @media (min-width 768px)
      justify-content space-between
      padding 1rem

  li
    margin 0
    line-height 1
    list-style none
