a
  cursor pointer
  color var(--color-link-dark)
  font-size 0.95em
  text-decoration none

  &:hover
    color var(--color-link-dark)
    text-decoration underline
    text-decoration-thickness 2px

nav a
  display inline-block
  font-weight 700

  &.active
    cursor default
    color var(--color-fore)
    font-weight 300
    outline none

    &:hover
      color var(--color-fore)
      text-decoration none
